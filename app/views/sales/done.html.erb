<table class="table table-hover">
  <thead>
    <tr>
      <th>Detail</th>
      <th>Category</th>
      <th>Value</th>
      <th >Tax</th>
      <th >Discount</th>
      <th >Total</th>
    </tr>
  </thead>

  <tbody>
    <% @sale.each do |item| %>
      <tr class= 'table-secondary'>
        <td><%= item.detail %></td>
        <td><%= item.category  %></td>
        <td><%= item.value  %></td>
        <td><%= item.tax %></td>
        <td><%= item.discount  %></td>
        <td><%= item.total%><br></td>

      </tr>
    <% end %>
  </tbody>
</table>
